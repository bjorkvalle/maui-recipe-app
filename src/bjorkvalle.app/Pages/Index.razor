@page "/"
@using bjorkvalle.app.Features.Recipes

<div id="index-start" class="mb-20">
    <div class="px-6 py-10 bg-gradient-to-tr from-primary to-primary-focus 
                rounded-box mb-6 flex justify-between items-center">
        <h1 class="text-3xl font-extrabold uppercase text-primary-content">
            La masă
        </h1>
        <div class="flex gap-2">
            <Dropdown @ref="drp" MenuAlignment="Align.Right" HorizontalAlign="HorizontalAlign.Bottom">
                <ToggleContent>
                    <Button Color="Color.Primary" Clicked="(() => drp.Toggle())">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 stroke-primary-content">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M4.098 19.902a3.75 3.75 0 005.304 0l6.401-6.402M6.75 21A3.75 3.75 0 013 17.25V4.125C3 3.504 3.504 3 4.125 3h5.25c.621 0 1.125.504 1.125 1.125v4.072M6.75 21a3.75 3.75 0 003.75-3.75V8.197M6.75 21h13.125c.621 0 1.125-.504 1.125-1.125v-5.25c0-.621-.504-1.125-1.125-1.125h-4.072M10.5 8.197l2.88-2.88c.438-.439 1.15-.439 1.59 0l3.712 3.713c.44.44.44 1.152 0 1.59l-2.879 2.88M6.75 17.25h.008v.008H6.75v-.008z" />
                        </svg>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                            <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
                        </svg>
                    </Button>
                </ToggleContent>
                <MenuContent>
                    <ul class="menu bg-base-100 w-56 rounded-box shadow max-h-screen-50 overflow-y-auto flex-nowrap">
                        <Loop TItem="KeyValuePair<string, string>" Items="themeItems" Context="item">
                            <li>
                                <a @onclick="(() => SetTheme(item.Key))">
                                    @item.Value
                                </a>
                            </li>
                        </Loop>
                    </ul>
                </MenuContent>
            </Dropdown>
            <a href="recipes/create" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                    <path d="M21 6.375c0 2.692-4.03 4.875-9 4.875S3 9.067 3 6.375 7.03 1.5 12 1.5s9 2.183 9 4.875z" />
                    <path d="M12 12.75c2.685 0 5.19-.586 7.078-1.609a8.283 8.283 0 001.897-1.384c.016.121.025.244.025.368C21 12.817 16.97 15 12 15s-9-2.183-9-4.875c0-.124.009-.247.025-.368a8.285 8.285 0 001.897 1.384C6.809 12.164 9.315 12.75 12 12.75z" />
                    <path d="M12 16.5c2.685 0 5.19-.586 7.078-1.609a8.282 8.282 0 001.897-1.384c.016.121.025.244.025.368 0 2.692-4.03 4.875-9 4.875s-9-2.183-9-4.875c0-.124.009-.247.025-.368a8.284 8.284 0 001.897 1.384C6.809 15.914 9.315 16.5 12 16.5z" />
                    <path d="M12 20.25c2.685 0 5.19-.586 7.078-1.609a8.282 8.282 0 001.897-1.384c.016.121.025.244.025.368 0 2.692-4.03 4.875-9 4.875s-9-2.183-9-4.875c0-.124.009-.247.025-.368a8.284 8.284 0 001.897 1.384C6.809 19.664 9.315 20.25 12 20.25z" />
                </svg>
            </a>
        </div>
    </div>

    @if (!recipes.IsNullOrEmpty())
    {
        <RecipeList Items="recipes" />
    }

    <Loading IsLoading="isLoading" />

    <div class="flex justify-end p-10 fixed bottom-0 right-0">
        <a href="recipes/create" class="btn btn-primary shadow-xl outline outline-3 outline-primary border-2 border-primary-content">
            New recipe
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                <path fill-rule="evenodd" d="M12 3.75a.75.75 0 01.75.75v6.75h6.75a.75.75 0 010 1.5h-6.75v6.75a.75.75 0 01-1.5 0v-6.75H4.5a.75.75 0 010-1.5h6.75V4.5a.75.75 0 01.75-.75z" clip-rule="evenodd" />
            </svg>
        </a>
    </div>

