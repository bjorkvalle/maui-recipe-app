@namespace bjorkvalle.UI.Components
@inherits UIComponentBase

@if (!NoRender)
{
    <div @attributes="AdditionalAttributes" class="@ClassNames">
        <CascadingValue Value="this">
            @ChildContent
        </CascadingValue>
    </div>
}

@code {
    [CascadingParameter] Card CardContainer { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }

    protected override void OnInitialized()
    {
        if (CardContainer == null)
            throw new ArgumentNullException(nameof(Card), "CardBody must exist within a Card Container (CardContainer)");

        base.OnInitialized();
    }

    protected override void OnParametersSet()
    {
        classBuilder
            .Begin("card-body");
    }
}
