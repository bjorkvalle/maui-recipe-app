@namespace bjorkvalle.UI.Components
@inherits UIComponentBase

@if (!NoRender)
{
    <div @attributes="AdditionalAttributes" class="@ClassNames">
        <CascadingValue Value="this">
            @ChildContent
        </CascadingValue>
    </div>
}

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public Orientation Orientation { get; set; } = Orientation.Vertical;
    [Parameter] public bool IsCompact {get; set;}

    protected override void OnParametersSet()
    {
        classBuilder
            .Begin("card")
            .AddClass("card-side", condition: Orientation.Equals(Orientation.Horizontal))
            .AddClass("compact", condition: IsCompact);
    }
}
